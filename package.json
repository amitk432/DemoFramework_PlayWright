{
    "name": "playwright-automation-framework",
    "version": "1.0.0",
    "description": "Production-ready Playwright automation framework",
    "main": "index.js",
    "scripts": {
        "test": "npx playwright test -c config/playwright.config.js",
        "test:headed": "npx playwright test --headed -c config/playwright.config.js",
        "test:debug": "npx playwright test --debug -c config/playwright.config.js",
        "test:ui": "npx playwright test --ui -c config/playwright.config.js",
        "test:smoke": "npx playwright test --grep @smoke -c config/playwright.config.js",
        "test:parallel": "npx playwright test --workers=4 -c config/playwright.config.js",
        "report": "npx playwright show-report",
        "install:browsers": "npx playwright install",
        "test:parallel-projects": "npx playwright test --project=chromium --project=firefox -c config/playwright.config.js",
        "test:shard-1": "SHARD=1/3 npx playwright test -c config/playwright.config.js",
        "test:shard-2": "SHARD=2/3 npx playwright test -c config/playwright.config.js",
        "test:shard-3": "SHARD=3/3 npx playwright test -c config/playwright.config.js",
        "type-check": "tsc --noEmit"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/node": "^24.2.0",
        "allure-playwright": "^2.9.2",
        "dotenv": "^16.3.1",
        "typescript": "^5.9.2",
        "winston": "^3.17.0"
    },
    "dependencies": {
        "faker": "^6.6.6"
    }
}
